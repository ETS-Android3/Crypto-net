<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/symbol"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageSymbol"
                android:layout_width="60dp"
                android:layout_height="59dp"
                android:src="@drawable/rectangle"
                app:layout_constraintBottom_toBottomOf="@+id/symbol"
                app:layout_constraintEnd_toEndOf="@+id/symbol"
                app:layout_constraintStart_toStartOf="@+id/symbol"

                app:layout_constraintTop_toTopOf="@+id/symbol" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/coinShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/symbol"
            android:text="BTC"
            android:textColor="@color/white"
            android:textSize="19dp"
            app:layout_constraintBottom_toTopOf="@+id/coinLongName"
            app:layout_constraintEnd_toStartOf="@+id/valueInKes"
            app:layout_constraintHorizontal_bias="0.319"
            app:layout_constraintStart_toEndOf="@+id/symbol"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/coinLongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coinShortName"
            android:layout_toRightOf="@+id/symbol"
            android:text="Bitcoin"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@+id/symbol"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.657" />

        <TextView
            android:id="@+id/valueInKes"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="44dp"
            android:layout_toRightOf="@+id/coinShortName"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:text="Kes 450000"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>